{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/bundle.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --module commonjs && webpack --mode production",
    "format": "prettier --check ./src/**/*.ts",
    "format:fix": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "parse": "ts-node src/parser.ts",
    "viz": "ts-node src/vizserver.ts",
    "cwsc": "ts-node src/cli.ts",
    "ir": "ts-node src/ir.ts",
    "fw": "ts-node src/filewriter.ts",
    "cwam": "ts-node src/cwam.ts",
    "model": "ts-node src/model.ts",
    "types": "ts-node src/typesystem.ts",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "antlr-lexer": "antlr4ts ./grammar/CWScriptLexer.g4 -o ./src",
    "antlr-parser": "antlr4ts -visitor ./grammar/CWScriptParser.g4 -o ./src -lib ./src/grammar",
    "antlr": "npm run antlr-lexer && npm run antlr-parser",
    "doc": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "cwsc",
  "author": "William Chen",
  "module": "dist/cwsc.esm.js",
  "size-limit": [
    {
      "path": "dist/cwsc.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cwsc.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/cytoscape": "^3.19.4",
    "@types/cytoscape-dagre": "^2.3.0",
    "@types/ejs": "^3.1.0",
    "@types/lodash": "^4.14.178",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.1",
    "size-limit": "^7.0.8",
    "terser-webpack-plugin": "4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.5.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.5.5",
    "typescript-call-graph": "^0.0.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "antlr4ts": "^0.5.0-alpha.4",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "commander": "^9.0.0",
    "cytoscape": "^3.21.0",
    "cytoscape-dagre": "^2.4.0",
    "ejs": "^3.1.6",
    "immutable": "^4.0.0",
    "lodash": "^4.17.21",
    "omit-deep-lodash": "^1.1.6",
    "process": "^0.11.10",
    "source-map": "^0.7.3",
    "stream-browserify": "^3.0.0",
    "toml": "^3.0.0",
    "yaml": "^1.10.2"
  }
}
